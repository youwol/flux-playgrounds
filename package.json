{
    "name": "@youwol/flux-playgrounds",
    "version": "0.0.1-wip",
    "description": "Toolbox to test modules before eventually migrating them to a better place",
    "author": "",
    "keywords": [
        "flux"
    ],
    "main": "dist/@youwol/flux-playgrounds.js",
    "types": "src/index.ts",
    "scripts": {
        "autogen": "node scripts/auto-gen.js",
        "doc": "typedoc src/ --exclude src/index.ts --exclude src/tests --out dist/docs --theme default",
        "build": "yarn build:dev",
        "build:dev": "del-cli dist && yarn autogen && webpack --mode development && cp -r ./assets ./dist/assets",
        "build:prod": "del-cli dist && yarn autogen && webpack --mode production && cp -r ./assets ./dist/assets",
        "test": "jest -c ./jest.config.js --rootDir . -i",
        "test-coverage": "jest -c ./jest.config.js --rootDir . -i --collect-coverage --collectCoverageFrom=./src/lib/**/*.ts ",
        "publish-npm-public": "yarn build:prod && yarn test-coverage && yarn publish --access public"
    },
    "dependencies": {},
    "peerDependencies": {
        "three": "0.128.0",
        "@youwol/flux-core": "^0.0.21",
        "@youwol/cdn-client": "^0.0.12",
        "@youwol/flux-view": "^0.0.10",
        "@youwol/fv-group": "^0.0.4",
        "@youwol/fv-input": "^0.0.5",
        "@youwol/fv-button": "^0.0.3",
        "@youwol/flux-three": "^0.0.11",
        "three-trackballcontrols":"0.0.8",
        "@youwol/logging": "^0.0.2",
        "lodash": "4.x",
        "reflect-metadata": "0.x",
        "rxjs": "6.x"
    },
    "devDependencies": {
        "del-cli": "^4.0.1",
        "three": "0.128.0",
        "@youwol/flux-core": "^0.0.21",
        "@youwol/cdn-client": "^0.0.12",
        "@youwol/flux-view": "^0.0.10",
        "@youwol/fv-group": "^0.0.4",
        "@youwol/fv-input": "^0.0.5",
        "@youwol/fv-button": "^0.0.3",
        "@youwol/flux-three": "^0.0.11",
        "three-trackballcontrols":"0.0.8",
        "@youwol/logging": "^0.0.2",
        "lodash": "4.x",
        "reflect-metadata": "0.x",
        "rxjs": "6.x",
        "@types/jest": "26.0.22",
        "@types/node": "14.14.37",
        "eslint": "7.23.0",
        "jest": "26.6.3",
        "jest-junit": "12.0.0",
        "ts-jest": "26.5.4",
        "tslib": "2.2.0",
        "ts-loader": "8.1.0",
        "typedoc": "0.20.34",
        "typescript": "4.2.3",
        "webpack": "5.28.0",
        "webpack-bundle-analyzer":"^4.5.0",
        "webpack-cli": "4.6.0"
    },
    "youwol": {
        "type": "flux-pack",
        "pipeline": {
            "name": "yw_pipeline_flux_pack",
            "version": "0.0.0"
        },
        "cdnDependencies": {
            "@youwol/flux-core": "^0.1.0",
            "@youwol/cdn-client": "^0.1.0",
            "@youwol/flux-view": "^0.1.1",
            "@youwol/flux-three": "^0.0.11",
            "three-trackballcontrols":"0.0.8",
            "@youwol/fv-group": "^0.0.4",
            "@youwol/fv-input": "^0.0.5",
            "@youwol/fv-button": "^0.0.3"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "rangeStart": 0,
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "auto",
        "keySeparator": "="
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist/",
            "/coverage/"
        ],
        "env": {
            "browser": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:eslint-comments/recommended",
            "plugin:import/recommended",
            "prettier"
        ],
        "rules": {
            "eslint-comments/require-description": [
                "error"
            ],
            "eslint-comments/no-unused-disable": [
                "error"
            ],
            "curly": [
                "error"
            ],
            "no-irregular-whitespace": [
                "error",
                {
                    "skipComments": true,
                    "skipTemplates": true
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "webpack.config.js",
                    "jest.config.js"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended",
                    "plugin:import/typescript"
                ],
                "parser": "@typescript-eslint/parser",
                "parserOptions": {
                    "tsconfigRootDir": "./",
                    "project": [
                        "./tsconfig.json"
                    ]
                },
                "plugins": [
                    "unused-imports",
                    "@typescript-eslint"
                ],
                "rules": {
                    "@typescript-eslint/no-namespace": "off",
                    "@typescript-eslint/no-unused-vars": "off",
                    "unused-imports/no-unused-imports": "error",
                    "unused-imports/no-unused-vars": [
                        "warn",
                        {
                            "vars": "all",
                            "varsIgnorePattern": "^_",
                            "args": "after-used",
                            "argsIgnorePattern": "^_"
                        }
                    ],
                    "@typescript-eslint/no-unnecessary-type-assertion": "error"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "extends": [
                    "plugin:jest/recommended",
                    "plugin:jest/style"
                ],
                "plugins": [
                    "jest"
                ],
                "rules": {
                    "jest/expect-expect": [
                        "error",
                        {
                            "assertFunctionNames": [
                                "expect",
                                "verify"
                            ]
                        }
                    ]
                }
            }
        ],
        "noInlineConfig": false,
        "reportUnusedDisableDirectives": true
    }
}
